{{!-- Profile body with stats displayed dynamically --}}
<div class="container-fluid text-center">
  <div class="row logged-height">
    <div class="col align-self-center">
      <div>
        <img class="logo login-logo" src="imgs/the_Queen_And_her_guard.PNG" alt="Queen and her guard" />
      </div>
    </div>
    <div class="col-sm align-self-center">
      <div class="row">
        <p class="allStats">Statistics</p>
        <div class="col stats-played">
          <h6>Times played</h6>
          <div class="row">
            <img class="col p-0 mx-2 miniIcon" src="imgs/quest.png" alt="times played" />
            <p class="col stats">{{char.played}}</p>
          </div>
        </div>
        <div class="col-sm stats-wins">
          <h6>Wins</h6>
          <div class="row">
            <img class="col p-0 mx-2 miniIcon" src="imgs/knight.png" alt="knight" />
            <p class="col stats">{{char.wins}}</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm stats-losses">
          <h6>Losses</h6>
          <div class="row">
            <img class="col p-0 mx-2 miniIcon" src="imgs/sign.png" alt="lost direction" />
            <p class="col stats">{{char.losses}}</p>
          </div>
        </div>
        <div class="col-sm stats-deaths">
          <h6>Deaths</h6>
          <div class="row">
            <img class="col p-0 mx-2 miniIcon" src="imgs/grim-reaper.png" alt="grim reaper" />
            <p class="col stats">{{char.deaths}}</p>
          </div>
        </div>
      </div>
      <img class="border-line" src="imgs/divider.png" alt="divider image" />
      <form id="startNewGame">
        <label class="charLabel" for="charName">Start New Game</label><br>
        <input type="text" id="charName" placeholder="Enter a character name" required /><br>
        <input type="submit" id="startGame" value="Begin Your Adventure" />
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="../js/profile.js"></script>