{{!-- Login body with 2 forms for login/signup --}}
<div class="container-fluid text-center">
  <div class="row align-items-center" style="height: 82vh">
    <div class="col">
      <div>
        <img class="logo" src="imgs/the_Queen_And_her_guard.PNG" alt="Queen and her guard" />
      </div>
    </div>
    <div class="col">
      <div class="login-title">
        Login
      </div>
      <form id="login">
        <label for="uname" hidden="hidden"></label><br>
        <input type="text" id="uname" placeholder="Enter your username" />
        <label for="upass" hidden="hidden"></label><br>
        <input type="password" id="upass" placeholder="Enter your password" /><br>
        <input type="submit" id="usubmit" value="Login">
      </form>
      <img class="border-line" src="imgs/divider.png" alt="divider image" />
      <div class="signup-title">
        Sign-up
      </div>
      <form id="signup">
        <label for="sname" hidden="hidden"></label><br>
        <input type="text" id="sname" placeholder="Enter a username" required />
        <label for="semail" hidden="hidden"></label><br>
        <input type="email" id="semail" placeholder="Enter an email" required />
        <label for="spass" hidden="hidden"></label><br>
        <input type="password" id="spass" placeholder="Enter a password" required minlength="4"/>
        <input type="submit" id="ssubmit" value="Create Account">
      </form>
    </div>
  </div>
</div>

<script src="../js/login.js"></script>