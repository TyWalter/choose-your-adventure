{{!-- Login body with 2 forms for login/signup --}}
<div class="container-fluid text-center">
  <div class="row align-items-center">
    <div class="col">
      <div>
        <img src="imgs/the_Queen_And_her_guard.PNG" alt="Queen and her guard" />
      </div>
    </div>
    <div class="col">
      <div>
        <form id="login-form">
          <label for="uname" hidden="hidden"></label><br>
          <input type="text" id="uname" name="uname" placeholder="Enter your username" />
          <label for="upass" hidden="hidden"></label><br>
          <input type="text" id="upass" name="upass" placeholder="Enter your password" />
          <input type="submit" id="usubmit" value="Login">
        </form>
      </div>
      <div>
        <form id="signup-form">
          <label for="sname" hidden="hidden"></label><br>
          <input type="text" id="sname" name="sname" placeholder="Enter a username" />
          <label for="semail" hidden="hidden"></label><br>
          <input type="text" id="semail" name="semail" placeholder="Enter an email" />
          <label for="spass" hidden="hidden"></label><br>
          <input type="text" id="spass" name="spass" placeholder="Enter a password" />
          <input type="submit" id="submit" value="Create Account">
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="../js/login.js"></script>
